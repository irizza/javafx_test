<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="219.0" prefWidth="251.0">
         <children>
            <Label layoutX="7.0" layoutY="22.0" prefHeight="17.0" prefWidth="53.0" text="Name :" />
            <TextField fx:id="sendName" layoutX="66.0" layoutY="18.0" />
            <Label layoutX="7.0" layoutY="61.0" text="Email :" />
            <TextField fx:id="sendEmail" layoutX="66.0" layoutY="57.0" />
            <RadioButton fx:id="rb1" layoutX="5.0" layoutY="104.0" mnemonicParsing="false" onAction="#rb1Action" prefHeight="17.0" prefWidth="107.0" text="Landline phone">
               <toggleGroup>
                  <ToggleGroup fx:id="gender" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rb2" layoutX="141.0" layoutY="104.0" mnemonicParsing="false" onAction="#rb2Action" text="Mobile phone" toggleGroup="$gender" />
            <Label layoutX="8.0" layoutY="148.0" text="Number :" />
            <TextField fx:id="sendNumber" layoutX="68.0" layoutY="144.0" />
            <Button layoutX="88.0" layoutY="177.0" mnemonicParsing="false" onAction="#btConfimAction" prefHeight="32.0" prefWidth="76.0" text="Confirm" />
            <Label fx:id="lbError" layoutX="66.0" prefHeight="17.0" prefWidth="149.0" textFill="#ff1700">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="lbRb1" layoutX="20.0" layoutY="127.0" prefHeight="17.0" prefWidth="50.0" />
            <Label fx:id="lbRb2" layoutX="150.0" layoutY="127.0" prefHeight="17.0" prefWidth="50.0" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
